{
  "name": "json-compare-plus",
  "repository" : "https://github.com/PoojanSmart/JSON-Editor.git",
  "author": "Poojan Smart",
  "displayName": "JSON Compare+",
  "description": "JSON Compare+",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jsoneditor.filter",
        "title": "Filter JSON (JMESPath)",
        "icon": "$(filter)"
      },
      {
        "command": "jsoneditor.compare",
        "title": "Compare JSON",
        "icon": "$(diff-single)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "jsoneditor.filter",
          "when": "resourceLangId == json || resourceLangId == jsonc",
          "group": "navigation"
        },
        {
          "command": "jsoneditor.compare",
          "when": "resourceLangId == json || resourceLangId == jsonc",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/jmespath": "^0.15.2",
    "@types/json-to-ast": "^2.1.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "jsondiffpatch": "^0.7.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "jmespath": "^0.16.0",
    "json-to-ast": "^2.1.0"
  }
}
